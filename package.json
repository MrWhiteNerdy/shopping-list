  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^7.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.1"
  },
  "devDependencies": {
    "concurrently": "^3.6.1",
    "nodemon": "^1.19.1"
  }
}
